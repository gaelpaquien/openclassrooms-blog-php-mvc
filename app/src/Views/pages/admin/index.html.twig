{% extends "base.html.twig" %}

{% block title %}Blog PHP MVC - Administration{% endblock %}

{% block content %}
    <section class="admin page-section mb-0" id="admin">
        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase">Administration</h2>
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <div class="admin-stats text-center">
                <p>{{ users }} utilisateurs inscrits</p>
                <p>{{ articles }} articles publiés</p>
                <p>{{ comments }} commentaires publiés ({{ commentsValid }} validés)</p>
            </div>
            <div class="admin-btn-index text-center">
                <a class="btn" href="/administration/commentaires">Gestion des commentaires</a>
                <a class="btn" href="/administration/utilisateurs">Gestion des utilisateurs</a>
            </div>
        </div>
    </section>
{% endblock %}