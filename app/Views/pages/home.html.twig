{% extends "base.html.twig" %}

{% block title %}Blog de Gaël - Accueil{% endblock %}

{% block content %}
    <!-- Header-->
    {% include "layout/header.html.twig" %}

    <!-- Recent articles -->
    <section class="page-section recent-articles" id="recent-articles">
        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase mb-0">Articles récents</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                {% for post in posts %}
                    <div class="col">
                        <div class="card h-100">
                            <img src="../assets/img/posts/default.jpg" class="card-img-top" alt="Titre de l'article">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text"><small class="text-muted">Publié le {{ post.created_at | date('d/m/Y') }}</small></p>
                            </div>
                            <div class="card-footer text-center">
                                <button class="btn">
                                    <a class="card-link" href="/article/{{ post.id }}">Voir l'article</a>
                                </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            <div class="all-articles">
                <button class="btn">
                    <a href="/articles">Voir tous les articles</a>
                 </button>
                 
            </div>
        </div>
    </section>

    <!-- CV -->
    <section class="page-section mb-0" id="cv">
        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase">Mon CV</h2>
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <div class="row">
                <div class="col-lg-12 ms-auto">
                    <p class="lead text-center">
                        Vous souhaitez en savoir plus sur moi ? 
                        Découvrez mon CV au format PDF en cliquant sur le bouton ci-dessous.
                    </p>
                </div>
            </div>
            <div class="text-center mt-4">
                <button class="btn">
                    <a href="../assets/docs/cv.pdf" target="_blank">Voir le CV</a>
                </button>
            </div>
        </div>
    </section>

    <!-- Contact -->
    <section class="page-section" id="contact">
        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase mb-0">Contactez-moi</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    <form id="contact-form">
                        <div class="mb-3">
                            <label for="firstname">Prénom :</label>
                            <input class="form-control" id="firstname" type="text" placeholder="Entrer votre prénom..." required/>
                        </div>
                        <div class="mb-3">
                            <label for="name">Nom :</label>
                            <input class="form-control" id="name" type="text" placeholder="Entrer votre nom..." required/>
                        </div>
                        <div class="mb-3">
                            <label for="email">Email :</label>
                            <input class="form-control" id="email" type="email" placeholder="exemple@email.fr" required/>
                        </div>
                        <div class="mb-3">
                            <label for="message">Message :</label>
                            <textarea class="form-control" id="message" type="text" placeholder="Entrer votre message..." style="height: 10rem" required></textarea>
                        </div>
                        <button class="btn" id="submit-btn" type="submit">Envoyer</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}