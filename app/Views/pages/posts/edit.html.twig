{% extends "base.html.twig" %}

{% block title %}Blog de GaÃ«l - Modifier un article{% endblock %}

{% block content %}
    <section class="page-section update-article" id="update-article">
        <div class="container">
            <h2 class="page-section-heading text-center text-uppercase mb-0">{{ post.title }}</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>
            <form id="contact-form" method="POST" action="/article/{{ post.slug }}-{{ post.id }}/edition/confirmer">
                <div class="mb-3">
                    <label for="title">Titre :</label>
                    <input class="form-control" id="title" name="title" type="text" value="{{ post.title }}" required/>
                </div>
                <div class="mb-3">
                    <label for="short-description">Description courte :</label>
                    <input class="form-control" id="shortDescription" name="shortDescription" type="text" value="{{ post.shortDescription }}" required/>
                </div>
                <div class="mb-3">
                    <label for="author">Auteur :</label>
                    <input class="form-control" id="author" name="author" type="text" value="{{ post.firstnameAuthor ~ ' ' ~ post.lastnameAuthor}}" required/>
                </div>
                <div class="mb-3">
                    <label for="message">Contenu :</label>
                    <textarea class="form-control" id="message" name="message" type="text" style="height: 10rem" required>{{ post.content }}</textarea>
                </div>
                <div class="edit-btn">  
                    <button class="btn" id="submit-btn" type="submit">
                        Modifier l'article
                    </button>
                    <a class="btn" href="/article/{{ post.slug }}-{{ post.id }}/suppression">Supprimer l'article</a>
                </div>
            </form>
        </div>
    </section>
{% endblock %}